<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

<changeSet id="createScheduledTasksTable" author="Dmytro Fedotov">
    <preConditions onFail="MARK_RAN">
        <not>
            <tableExists tableName="scheduled_tasks"/>
        </not>
    </preConditions>
    <createTable tableName="scheduled_tasks">
        <column name="id" type="bigint" autoIncrement="true">
            <constraints primaryKey="true" nullable="false"/>
        </column>
        <column name="task" type="varchar(100)">
            <constraints nullable="false" unique="true"/>
        </column>
        <column name="done" type="boolean" defaultValue="false"/>
    </createTable>
</changeSet>
    <changeSet id="addGenerateNicknamesTask" author="Dmytro Fedotov">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT COUNT(*) FROM scheduled_tasks WHERE task = 'generate nicknames'
            </sqlCheck>
        </preConditions>
        <insert tableName="scheduled_tasks">
            <column name="task" value="generate nicknames"/>
            <column name="done" value="false"/>
        </insert>
    </changeSet>
</databaseChangeLog>


