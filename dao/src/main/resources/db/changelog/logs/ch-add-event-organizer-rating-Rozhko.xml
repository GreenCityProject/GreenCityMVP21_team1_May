<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="Rozhko-2" author="Ilia Rozhko">
        <createTable tableName="event_organizer_ratings">
            <column name="id" autoIncrement="true" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="rating" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="organizer_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_event_organizer_rating_organizer_id" references="users(id)"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_event_organizer_rating_user_id" references="users(id)"/>
            </column>
            <column name="event_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_event_organizer_rating_event_id" references="events(id)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>