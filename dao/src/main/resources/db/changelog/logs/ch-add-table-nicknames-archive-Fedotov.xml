<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

<changeSet id="createTableNicknamesArchive" author="Dmytro Fedotov">
    <createTable tableName="nicknames_archive">
        <column name="id" type="BIGINT" autoIncrement="true">
            <constraints primaryKey="true" nullable="false"/>
        </column>
        <column name="activity" type="BOOLEAN">
            <constraints nullable="false"/>
        </column>
        <column name="nickname" type="VARCHAR(30)">
            <constraints unique="true" nullable="false"/>
        </column>
        <column name="user_id" type="BIGINT">
            <constraints nullable="false"/>
        </column>
    </createTable>
</changeSet>

    <changeSet id="addForeignKeyNicknamesArchive" author="Dmytro Fedotov">
        <addForeignKeyConstraint
                baseTableName="nicknames_archive"
                baseColumnNames="user_id"
                referencedTableName="users"
                referencedColumnNames="id"
                constraintName="FK_nicknames_archive_user"
        />
    </changeSet>
</databaseChangeLog>